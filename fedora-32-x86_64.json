{
  "variables": {
      "aws_profile": "osbuild-personal",
      "region":      "us-east-1",
      "distro":      "fedora32",
      "arch":        "x86_64",
      "name":        "osbuild-jenkins-{{user `distro`}}-{{user `arch`}}"
  },
  "builders": [
      {
          "ami_name": "{{user `name`}}-{{timestamp}}",
          "region": "{{user `region`}}",
          "profile": "{{user `aws_profile`}}",
          "source_ami_filter": {
            "filters": {
              "virtualization-type": "hvm",
              "name": "Fedora-Cloud-Base-32*",
              "root-device-type": "ebs",
              "architecture": "{{user `arch`}}"
            },
            "owners": ["125523088429"],
            "most_recent": true
          },
          "ssh_username": "fedora",
          "type": "amazon-ebs",
          "associate_public_ip_address": true,
          "ssh_interface": "public_ip",
          "security_group_ids": [
            "sg-0ff22a7fd4f8b2637"
          ],
          "run_tags": {
            "Name": "{{user `name`}}"
          },
          "tags":{
            "Name": "{{user `name`}}-{{timestamp}}"
          },
          "launch_block_device_mappings": [
            {
              "device_name": "/dev/sda1",
              "delete_on_termination": "true",
              "volume_type": "gp2",
              "volume_size": 25
            }
          ],
          "spot_instance_types": [
            "m5a.large",
            "m5.large",
            "m5a.xlarge",
            "m5.xlarge",
            "c5.large",
            "c5.xlarge"
          ],
          "spot_price": "1.00"
      }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "prepare.sh",
      "destination": "/tmp/prepare.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sudo /tmp/prepare.sh",
        "rm -f /tmp/prepare.sh"
      ]
    }
  ]
}
